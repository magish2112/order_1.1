# ===========================================
# PRODUCTION Environment - Eterno Project
# ===========================================
# ВАЖНО: Этот файл - шаблон для production
# Скопируйте в .env и заполните реальными значениями!
# ===========================================

# Node Environment
NODE_ENV=production

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_DB=eterno_production
POSTGRES_USER=eterno_prod_user
POSTGRES_PASSWORD=
# ⚠️ ОБЯЗАТЕЛЬНО: Сгенерируйте надежный пароль (минимум 20 символов)
# Команда: openssl rand -base64 32

# Database connection string (auto-configured)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ===========================================
# Redis Cache
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# JWT Secrets
# ===========================================
# ⚠️ ОБЯЗАТЕЛЬНО: Сгенерируйте уникальные секреты (минимум 32 символа)
# Команда: openssl rand -base64 32
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===========================================
# CORS Settings
# ===========================================
# ⚠️ ОБЯЗАТЕЛЬНО: Укажите КОНКРЕТНЫЕ домены (НЕ использовать *)
# Пример: https://yourdomain.com,https://admin.yourdomain.com
CORS_ORIGIN=

# ===========================================
# Public URLs
# ===========================================
# ⚠️ ОБЯЗАТЕЛЬНО: Укажите публичные URL для production
# URL для API (используется на frontend)
NEXT_PUBLIC_API_URL=

# URL для админки (используется в email уведомлениях)
ADMIN_URL=

# URL сайта (для SEO, sitemap)
NEXT_PUBLIC_SITE_URL=

# Swagger (для production рекомендуется отключить)
SWAGGER_HOST=
SWAGGER_SCHEME=https

# ===========================================
# SMTP Email Settings
# ===========================================
# ⚠️ ОБЯЗАТЕЛЬНО: Настройте для отправки уведомлений
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ===========================================
# File Uploads
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/public/uploads
PUBLIC_UPLOAD_URL=/uploads

# ===========================================
# Ports
# ===========================================
# ⚠️ ВАЖНО: В production НЕ открывайте порты БД и Redis наружу
API_PORT=4000
WEB_PORT=3000
ADMIN_PORT=3001
NGINX_PORT=80
# POSTGRES_PORT=5432  # Закрыт в production
# REDIS_PORT=6379     # Закрыт в production

# ===========================================
# Vite (для Admin панели)
# ===========================================
VITE_API_URL=

# ===========================================
# Security (для production)
# ===========================================
# Отключить development функции
DEV_ADMIN_EMAIL=
DEV_ADMIN_PASSWORD=
